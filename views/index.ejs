<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>

</head>
<body>

  <div class="header-todo">    
    <h2>Task Master </h2>
</div>
    
    <div class="d-flex justify-content-between add-box flex-wrap flex-md nowrap align-items-center pt-2 pb-1 mb-2 ">
        <h1 class="h2">Add Task</h1>
        <div class="btn-tool ar mb-2 mb-md 0">
          <div class="btn-group me-2">
            <a href="/api/todo/add" class="btn add-task btn-primary">+</a>
          </div>
        </div>
    </div>


    
  <div class="table-responsive">

    <table class="table table-striped table-sm">
      <thead>
        <tr class="action-small">
          <th scope="col" class="action">Todos</th>
          <th scope="col" class=" action text-end">Actions</th>
          <!-- <th scope="col">Start</th>
          <th scope="col">End Task</th> -->    
        </tr>
      </thead>
      
  
      <tbody>
        <% todos.forEach(element => { %>
          <tr class="align-middle ">
            <td><%= element.task %></td>
            <td class="text-end">
  
              <div class="d-flex flex-row justify-content-end gap-2 list-size">
  
                <a href="/api/todo/view/<%= element._id %>" type="button" class="btn btn-primary btn-small btn-size">
                  <i class="bi bi-eye"></i>
                </a>
  
                <a href="/api/todo/edit/<%= element._id %>" type="button" class="btn btn-warning btn-small btn-size">
                  <i class="bi bi-pencil"></i>
                </a>
                <form action="/api/todo/edit/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                  <button type="submit" class="btn btn-danger danger btn-small btn-size">
                    <i class="bi bi-x"></i>
                  </button>
                </form>
  
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>


</body>
</html>