<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amazing Todo App</title>

</head>
<body>
    
    <div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom border-top">
        <h1 class="h2">Add Task</h1>
        <div class="btn-toolbar mb-2 mb-md 0">
          <div class="btn-group me-2">
            <a href="/add" class="btn btn-sm btn-outline-secondary">+</a>
          </div>
        </div>
      </div>


    
  <div class="table-responsive">

    <table class="table table-striped table-sm">
      <thead>
        <tr class="action">
          <th scope="col" class="action">Todos</th>
          <th scope="col" class=" action text-end">Action</th>
          <!-- <th scope="col">Start</th>
          <th scope="col">End Task</th> -->    
        </tr>
      </thead>
  
      <tbody>
        <% todos.forEach(element => { %>
          <tr class="align-middle">
            <td><%= element.task %></td>
            
            <!-- <td></%= element.start %></td>
             <td></%= element.stop %></td> -->
            <td class="text-end">
  
              <div class="d-flex flex-row justify-content-end gap-2">
  
                <a href="/view/<%= element._id %>" type="button" class="btn btn-primary btn-small">
                  <i class="bi bi-eye"></i>
                </a>
  
                <a href="/edit/<%= element._id %>" type="button" class="btn btn-warning btn-small">
                  <i class="bi bi-pencil"></i>
                </a>
  
                <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                      <div class="modal-body">
                        <p>
                          This will remove the task  <b class="fw-bold"><%= todo.task %></b> <br/>
                          Are you sure?
                        </p>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <form action="/edit/<%= todo._id %>?_method=DELETE" method="POST" class="position-relative">
                          <button type="submit" class="btn btn-danger btn-small">
                            <i class="bi bi-person-x"></i>
                          </button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
  
              </div>
  
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>



  

</body>
</html>