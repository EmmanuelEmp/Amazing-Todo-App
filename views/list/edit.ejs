  
<div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item item"><a href="/api/todo">Task List</a></li>
            <li class="breadcrumb-item active item">Edit Task</li>
          </ol>
        </nav>
      </div>
    </div>
   
  </div>
  
  <form action="/api/todo/edit/<%= todo._id %>?_method=PUT" method="POST">
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="task" class="item">Task</label>
        <input type="text" class="form-control item" id="task" name="task" value="<%= todo.task %>" placeholder="Add a New Task Here" required>
      </div>
    
      <div class="col">
        <label for="task" class="item">Start Task</label>
        <input type="text" class="form-control item" id="start" name="start" value="<%= todo.start %>"  required>
      </div>
    </div>
    <div class="col"> 
      <label for="task" class="item">End Task</label>
      <input type="text" class="form-control item" id="stop" name="stop" value="<%= todo.stop %>" placeholder="End Task" required>
    </div>
  </div>
    <div class="form-group mb-4">
      <button type="submit" class="btn btn-primary item">Update Task</button>
  
    </div>
    </form>
